<%graphql
  fragment Brand on Brand {
    isFork
    isMirror
    isPrivate
  }
%>
<% brand = Views::Brands::Icon::Brand.new(brand) %>

<% if brand.is_fork? %>
  <span class="octicon octicon-repo-forked"></span>
<% elsif brand.is_private? %>
  <span class="octicon octicon-lock"></span>
<% elsif brand.is_mirror? %>
  <span class="octicon octicon-mirror"></span>
<% else %>
  <span class="octicon octicon-repo"></span>
<% end %>
